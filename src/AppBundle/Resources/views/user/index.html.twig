{% import "AppBundle::macros.html.twig" as macros %}
{% extends "AppBundle::base.html.twig" %}
{% block title %}{{ user.username }}{% endblock %}
{% block body %}
	<div class="container">
		<div class="row">
			<div class="col s12 m6">
				<div class="up-profile__bio">
					<div class="up-profile__bio__user">
						<img class="up-avatar" src="{{ user.info.avatarLg }}" />
						<div class="up-username truncate">
							{{ user.username }}
						</div>
					</div>
					<div class="up-profile__bio__text">
						{{ user.info.bio }}
					</div>
				</div>
			</div>
			<div class="col s12 m6">
				<div class="up-profile__timeline">
					{% for event in events %}
						{{ macros.eventCard(event) }}
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
