<script>
    var slider = document.getElementById('up-nav-slider');
    var toggle = document.getElementById('up-nav-toggle');
    toggle.addEventListener('click', function() {
        slider.classList.toggle('up-opened');
    });
    document.addEventListener('click', function(e) {
        if (e.target.nodeName === 'A' || e.target.classList.contains('material-icons')) {
            return;
        }
        slider.classList.remove('up-opened');
    });
</script>
